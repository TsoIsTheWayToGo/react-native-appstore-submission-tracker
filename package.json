{
  "name": "react-native-appstore-submission-tracker",
  "version": "1.0.0",
  "description": "A comprehensive validation tool that checks React Native builds against Apple App Store submission requirements to catch potential rejection issues before submission.",
  "main": "src/validator.js",
  "bin": {
    "rn-appstore-validator": "./bin/cli.js",
    "react-native-appstore-validator": "./bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ test/ --ext .js",
    "lint:fix": "eslint src/ test/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\" \"*.md\"",
    "prepublishOnly": "npm test && npm run lint",
    "example:basic": "node examples/basic-usage.js",
    "build": "echo 'No build step required for Node.js package'",
    "dev": "nodemon bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/react-native-appstore-submission-tracker.git"
  },
  "keywords": [
    "react-native",
    "ios",
    "app-store",
    "validation",
    "submission",
    "ci-cd",
    "apple",
    "mobile",
    "compliance",
    "automation",
    "linting",
    "privacy",
    "guidelines"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/react-native-appstore-submission-tracker/issues"
  },
  "homepage": "https://github.com/yourusername/react-native-appstore-submission-tracker#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^8.0.3",
    "plist": "^3.0.5",
    "yargs": "^17.6.2",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "eslint": "^8.22.0",
    "eslint-config-standard": "^17.0.0",
    "fs-extra": "^10.1.0",
    "jest": "^29.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "temp": "^0.9.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE"
  ]
}